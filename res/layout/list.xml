<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:background="#fbedcb"
	android:layout_width="fill_parent" android:layout_height="fill_parent">
	<LinearLayout android:orientation="horizontal"
		android:paddingTop="5px" android:paddingBottom="0px" android:gravity="center_vertical"
		android:layout_width="fill_parent" android:layout_marginLeft="0px"
		android:layout_height="wrap_content" android:weightSum="1">
		<Button android:id="@+id/mapbtn" 
		android:paddingTop="0sp" 
		android:paddingBottom="4sp" 
		android:text="@string/mapbtn"
			android:layout_height="30dp"
			android:textSize="18sp" android:layout_width="wrap_content"/>
		<TextView android:id="@+id/status" android:textColor="#000000"
			android:layout_width="wrap_content"
			android:text="@string/ysd" android:layout_weight="0.10" android:layout_height="match_parent"/>
	</LinearLayout>
	<ListView android:id="@+id/list" android:layout_width="fill_parent"
		android:layout_height="wrap_content" />
</LinearLayout>